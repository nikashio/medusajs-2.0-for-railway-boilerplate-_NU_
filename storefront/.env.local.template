# Medusa Storefront Environment Variables
# Copy this file to .env.local and fill in your values

# Required: Medusa Publishable Key (get from admin dashboard)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=

# Optional: Medusa Backend URL
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000

# Optional: Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:8000

# Optional: Default region
NEXT_PUBLIC_DEFAULT_REGION=us

# Optional: Search Configuration
NEXT_PUBLIC_INDEX_NAME=products
NEXT_PUBLIC_SEARCH_ENDPOINT=http://localhost:7700
NEXT_PUBLIC_SEARCH_API_KEY=masterKey

# Optional: Revalidation secret
REVALIDATE_SECRET=your-revalidation-secret
